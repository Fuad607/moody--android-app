<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#eeeeee"
    tools:context=".Q2Fragment">

    <TextView
        android:id="@+id/link_regist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="100dp"
        android:padding="10dp"
        android:gravity="center"
        android:text="How relaxed are you now?"
        android:textColor="@color/colorText"
        android:textSize="50sp" />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardCornerRadius="8dp"
        app:contentPadding="24dp">

        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/ic_grimacing_face_svgrepo_com"
                android:text="Very stressed"
                android:drawablePadding="4dp"
                android:textColor="#000000"
                android:textSize="12sp"/>

            <SeekBar
                android:id="@+id/seekBar2"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_marginTop="25dp"
                android:layout_height="wrap_content"
                android:progress="5"
                android:progressDrawable="@drawable/seek_bar"
                android:thumb="@drawable/seek_thumb"
                android:max="10"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Very relaxed"
                android:drawablePadding="4dp"
                android:textColor="#000000"
                android:textSize="12sp"
                android:drawableTop="@drawable/ic_relieved_face_svgrepo_com"/>

        </android.support.v7.widget.LinearLayoutCompat>

    </android.support.v7.widget.CardView>

</android.support.v7.widget.LinearLayoutCompat>