<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:orientation="vertical"
android:layout_margin="8dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <CheckBox
            android:id="@+id/checkBox_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="" />
        <TextView
            android:id="@+id/tv_user_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/empName"
            android:text="TextView1"
            android:layout_weight="1"
            android:textColor="#000"
            android:textSize="13dp"
            android:layout_toLeftOf="@+id/checkBox"
            android:layout_toStartOf="@+id/checkBox" />

        <Button
            android:id="@+id/metting_type_1"
            android:layout_width="48dp"
            android:layout_height="33dp"
            android:layout_toStartOf="@+id/tv_user_name"
            android:layout_toLeftOf="@+id/tv_user_name"
            android:text="F2F"
            android:textSize="11dp"
            android:textColor="#000" />
        <Button
            android:id="@+id/metting_type_2"
            android:layout_width="65dp"
            android:layout_height="33dp"
            android:layout_toStartOf="@+id/metting_type_1"
            android:layout_toLeftOf="@+id/metting_type_1"
            android:text="Video"
            android:textSize="11dp"
            android:textColor="#000" />
        <Button
            android:id="@+id/metting_type_3"
            android:layout_width="70dp"
            android:layout_height="33dp"
            android:layout_toStartOf="@+id/metting_type_2"
            android:layout_toLeftOf="@+id/metting_type_2"
            android:text="Other"
            android:textSize="11dp"
            android:textColor="#000" />
    </LinearLayout>
</LinearLayout>