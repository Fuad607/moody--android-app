<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="30dp"
    android:paddingRight="30dp"
    android:paddingTop="200dp"
    tools:context=".LoginActivity">

    <TextView
        android:id="@+id/link_regist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:text="How do you feel now?"
        android:textColor="@color/colorText"
        android:textSize="50sp" />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardCornerRadius="8dp"
        app:contentPadding="24dp">

        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/ic_sad_but_relieved_face_svgrepo_com"
                android:text="Very negative"
                android:drawablePadding="4dp"
                android:textColor="#000000"
                android:textSize="12sp"/>

            <SeekBar
                android:id="@+id/seekBar1"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_marginTop="25dp"
                android:layout_height="wrap_content"
                android:progress="5"
                android:progressDrawable="@drawable/seek_bar"
                android:thumb="@drawable/seek_thumb"
                android:max="10"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Very positive"
                android:drawablePadding="4dp"
                android:textColor="#000000"
                android:textSize="12sp"
                android:drawableTop="@drawable/ic_grinning_squinting_face_svgrepo_com"/>

        </android.support.v7.widget.LinearLayoutCompat>

    </android.support.v7.widget.CardView>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/surveyNext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:layout_margin="@dimen/fab_margin"
        app:backgroundTint="@color/colorPrimary"
        app:maxImageSize="50dp"
        app:srcCompat="@drawable/ic_baseline_navigate_next_24"
        tools:ignore="VectorDrawableCompat" />

</LinearLayout>